html
    box-sizing border-box

*,
*::before,
*::after
    box-sizing inherit

a
    color inherit
    text-decoration none

img,
svg
    max-width 100%
    height auto
    vertical-align bottom

body
    min-width 320px
    font-family "Jost", sans-serif
    font-size 16px
    font-weight normal
    color $black
    background-color $white

.flex
    display flex
    flex-direction row
    align-items center

.visually-hidden
    position absolute
    margin -1px
    padding 0
    border 0
    width 1px
    height 1px
    clip rect(0, 0, 0, 0)
    overflow hidden

.list-reset
    margin 0
    padding-left 0
    list-style none

.container
    margin-left auto
    margin-right auto
    padding-left 30px
    padding-right 30px
    max-width 1110px

.container-div
    margin-right 30px
    margin-left 30px
    padding-right 30px
    max-width 1380px

.container-title
    margin 0
    font-size 35px
    line-height 51px
    font-weight 600
    text-align center

.container-center
    display flex
    justify-content: center

.container-link
    display inline-block
    border 1.3px solid $blue
    border-radius 5px
    padding 15px 25px
    font-size 16px
    line-height 23px
    color $blue
    transition color .3s, background .3s

.container-link:hover
    color $white
    background $blue

.container-sublink
    border none
    border-radius 5px
    padding 10px 20px
    font-size 12px
    line-height 17px
    color #5D6C7B
    background #F4F7FB